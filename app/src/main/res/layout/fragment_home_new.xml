<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.movierama.ui.customviews.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@animator/elevation_title"
        app:layout_constraintTop_toTopOf="parent"
        app:screenTitle="@string/side_menu_home" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_xlarge"
        android:background="@color/white"
        android:padding="@dimen/space_medium"
        android:stateListAnimator="@animator/elevation_title"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_search" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_popular"
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:drawableEnd="@drawable/ic_next"
                android:paddingVertical="@dimen/space_medium"
                android:text="Popular"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/lbl_popular"
                tools:listitem="@layout/item_similar_movie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_now_playing"
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:layout_marginTop="@dimen/space_medium"
                android:drawableEnd="@drawable/ic_next"
                android:paddingVertical="@dimen/space_medium"
                android:text="Now playing"
                app:layout_constraintTop_toBottomOf="@id/list_popular" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_now_playing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/lbl_now_playing"
                tools:listitem="@layout/item_similar_movie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_top_rated"
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:layout_marginTop="@dimen/space_medium"
                android:drawableEnd="@drawable/ic_next"
                android:paddingVertical="@dimen/space_medium"
                android:text="Top rated"
                app:layout_constraintTop_toBottomOf="@id/list_now_playing" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_top_rated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/lbl_top_rated"
                tools:listitem="@layout/item_similar_movie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_upcoming"
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:layout_marginTop="@dimen/space_medium"
                android:drawableEnd="@drawable/ic_next"
                android:paddingVertical="@dimen/space_medium"
                android:text="Upcoming"
                app:layout_constraintTop_toBottomOf="@id/list_top_rated" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lbl_upcoming"
                android:layout_marginHorizontal="@dimen/main_margin_horizontal"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_similar_movie" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>