<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BottomSheetDialogTheme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetSettingsCancelButton">
        <item name="tint">@color/primary</item>
        <item name="srcCompat">@drawable/ic_cancel</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>