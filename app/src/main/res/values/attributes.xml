<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomToolbar">
        <attr name="showMenuButton" format="boolean" />
        <attr name="screenTitle" format="string" />
        <attr name="supportsSearchView" format="boolean" />
        <attr name="leftIconImage" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomSearchView">
        <attr name="searchDebounceTime" format="integer" />
        <attr name="searchHint" format="string" />
    </declare-styleable>

    <declare-styleable name="DebounceEditText">
        <attr name="debounceTime" format="integer" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxLinesCollapsed" format="integer" />
        <attr name="moreText" format="string" />
        <attr name="lessText" format="string" />
    </declare-styleable>
</resources>